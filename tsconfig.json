{
	"compilerOptions": {
		"target": "es5",
		"module": "amd",
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"allowJs": true,
		"outFile": "./build/app.js"
	},
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true
	},
	"lib": ["esnext"],
	"resolveJsonModule": true,
	"include": ["src/**/*"]
}
